{
  "service_name": "Langfuse",
  "service_slug": "langfuse",
  "base_url": "https://tracing.beamstudio.ai",
  "auth_type": "basic",
  "auth_details": {
    "username_env": "LANGFUSE_PUBLIC_KEY",
    "password_env": "LANGFUSE_SECRET_KEY"
  },
  "env_vars": [
    "LANGFUSE_PUBLIC_KEY",
    "LANGFUSE_SECRET_KEY",
    "LANGFUSE_HOST"
  ],
  "api_docs_url": "https://api.reference.langfuse.com/",
  "api_prefix": "/api/public",
  "endpoints": [
    {
      "name": "List Traces",
      "slug": "list-traces",
      "method": "GET",
      "path": "/traces",
      "description": "Get list of all traces",
      "triggers": ["list traces", "get traces", "show traces", "all traces"]
    },
    {
      "name": "Get Trace",
      "slug": "get-trace",
      "method": "GET",
      "path": "/traces/{traceId}",
      "description": "Get a specific trace by ID",
      "triggers": ["get trace", "show trace", "trace details", "trace by id"]
    },
    {
      "name": "List Observations V2",
      "slug": "list-observations",
      "method": "GET",
      "path": "/v2/observations",
      "description": "List observations with cursor-based pagination",
      "triggers": ["list observations", "get observations", "show observations", "spans"]
    },
    {
      "name": "Get Observation",
      "slug": "get-observation",
      "method": "GET",
      "path": "/observations/{observationId}",
      "description": "Get a specific observation by ID",
      "triggers": ["get observation", "show observation", "observation details"]
    },
    {
      "name": "List Sessions",
      "slug": "list-sessions",
      "method": "GET",
      "path": "/sessions",
      "description": "Get list of sessions",
      "triggers": ["list sessions", "get sessions", "show sessions"]
    },
    {
      "name": "Get Session",
      "slug": "get-session",
      "method": "GET",
      "path": "/sessions/{sessionId}",
      "description": "Get session with trace details",
      "triggers": ["get session", "show session", "session details"]
    },
    {
      "name": "List Scores V2",
      "slug": "list-scores",
      "method": "GET",
      "path": "/v2/scores",
      "description": "Get list of scores",
      "triggers": ["list scores", "get scores", "show scores", "evaluations"]
    },
    {
      "name": "Get Score",
      "slug": "get-score",
      "method": "GET",
      "path": "/v2/scores/{scoreId}",
      "description": "Get a specific score by ID",
      "triggers": ["get score", "show score", "score details"]
    },
    {
      "name": "List Models",
      "slug": "list-models",
      "method": "GET",
      "path": "/models",
      "description": "Get list of all models",
      "triggers": ["list models", "get models", "show models", "model costs"]
    },
    {
      "name": "Get Model",
      "slug": "get-model",
      "method": "GET",
      "path": "/models/{id}",
      "description": "Get a specific model by ID",
      "triggers": ["get model", "show model", "model details"]
    },
    {
      "name": "Get Project",
      "slug": "get-project",
      "method": "GET",
      "path": "/projects",
      "description": "Get project associated with API key",
      "triggers": ["get project", "show project", "current project", "project info"]
    }
  ],
  "status": "ready",
  "created": "2025-12-28",
  "created_by": "add-integration skill"
}
