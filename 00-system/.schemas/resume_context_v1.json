{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nexus.dev/schemas/resume_context_v1.json",
  "title": "Resume Context Schema",
  "description": "Schema for resume-context.md YAML frontmatter - loading manifest for project continuation",
  "type": "object",
  "required": [
    "resume_schema_version",
    "last_updated",
    "project_id",
    "project_name",
    "current_phase",
    "next_action",
    "files_to_load",
    "current_section",
    "current_task",
    "progress"
  ],
  "properties": {
    "resume_schema_version": {
      "type": "string",
      "description": "Schema version for resume-context.md (use 'schema_version' not '$schema')",
      "const": "1.0",
      "examples": ["1.0"]
    },
    "last_updated": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time",
      "examples": ["2026-01-04T12:15:00Z"]
    },
    "project_id": {
      "type": "string",
      "description": "Unique project identifier matching folder name",
      "pattern": "^[0-9]{2}-[a-z0-9-]+$",
      "examples": ["24-project-skills-research-resume-expansion"]
    },
    "project_name": {
      "type": "string",
      "description": "Human-readable project name from overview.md",
      "minLength": 1,
      "examples": ["Project Skills Research & Resume Expansion"]
    },
    "current_phase": {
      "type": "string",
      "description": "Current project lifecycle phase",
      "enum": ["research", "planning", "execution", "ready-for-implementation", "testing", "review"],
      "examples": ["ready-for-implementation"]
    },
    "next_action": {
      "type": "string",
      "description": "Skill to auto-execute on resume",
      "pattern": "^[a-z-]+$",
      "examples": ["execute-project", "create-project"]
    },
    "files_to_load": {
      "type": "array",
      "description": "List of files to load on resume (relative to project root)",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[0-9]{2}-[a-z/.-]+\\.md$"
      },
      "examples": [
        [
          "01-planning/overview.md",
          "01-planning/plan.md",
          "01-planning/steps.md",
          "02-resources/FINAL-DESIGN.md"
        ]
      ]
    },
    "current_section": {
      "type": "integer",
      "description": "Current section number in steps.md (0-indexed or 1-indexed based on project)",
      "minimum": 0,
      "examples": [0, 1, 2]
    },
    "current_task": {
      "type": "integer",
      "description": "Current task number within section",
      "minimum": 1,
      "examples": [1, 5, 10]
    },
    "progress": {
      "type": "string",
      "description": "Human-readable progress summary",
      "minLength": 1,
      "examples": [
        "Phase 1 complete, Phase 0.2 complete, Option B confirmed, naming fixed, ready for Phase 0.1",
        "14/40 tasks complete",
        "In progress"
      ]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "resume_schema_version": "1.0",
      "last_updated": "2026-01-04T12:15:00Z",
      "project_id": "24-project-skills-research-resume-expansion",
      "project_name": "Project Skills Research & Resume Expansion",
      "current_phase": "ready-for-implementation",
      "next_action": "execute-project",
      "files_to_load": [
        "01-planning/overview.md",
        "01-planning/plan.md",
        "01-planning/steps.md",
        "02-resources/FINAL-DESIGN.md",
        "02-resources/implementation-blockers.md",
        "02-resources/resume-state-REVISED.md",
        "02-resources/codebase-validation-report.md",
        "02-resources/phase-0-implementation-plan.md"
      ],
      "current_section": 0,
      "current_task": 1,
      "progress": "Phase 1 complete, Phase 0.2 complete, Option B confirmed, naming fixed, ready for Phase 0.1"
    }
  ]
}
